<SeashellCircle MinTimeTick="3000" MaxTimeTick="5000" MinRound="3" MaxRound="5" RateToTreasure="1" TreasurePosition="3;14">
	<!-- Loại ô -->
	<Cells>
		<Cell Type="0" Name="Tinh hoạt lực" StageValues="300;900;3000;10500;36000;120000" Position_1="0;9;18" Position_2="4" Position_3="17" />
