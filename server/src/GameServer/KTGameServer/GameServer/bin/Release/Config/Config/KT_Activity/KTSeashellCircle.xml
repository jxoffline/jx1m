		<Cell Type="2" Name="Đồng khóa" StageValues="60;180;600;2100;7200;24000" Position_1="8;13;16" Position_2="21" Position_3="12" />
		<Cell Type="3" Name="Huyền Tinh" StageValues="186;187;188;189;190;191" Position_1="7;11;20" Position_2="15" Position_3="6" />
	</Cells>
	<!-- End -->
	
	<!-- Tỷ lệ đổi sò % -->
	<ExchangeSeashell>
		<Stage ID="0" Value="50" />
		<Stage ID="1" Value="150" />
		<Stage ID="2" Value="500" />
		<Stage ID="3" Value="1750" />
		<Stage ID="4" Value="6000" />
		<Stage ID="5" Value="20000" />
	</ExchangeSeashell>
	<!-- End -->
	
	<!-- Tỷ lệ quay -->
	<TurnRate>
		<Stage ID="0" RateToSameType="0" RateToPosition_1="900" RateToPosition_2="99" RateToPosition_3="1" />
		<Stage ID="1" RateToSameType="500" RateToPosition_1="980" RateToPosition_2="20" RateToPosition_3="0" />
		<Stage ID="2" RateToSameType="100" RateToPosition_1="999" RateToPosition_2="1" RateToPosition_3="0" />
		<Stage ID="3" RateToSameType="10" RateToPosition_1="1000" RateToPosition_2="0" RateToPosition_3="0" />
		<Stage ID="4" RateToSameType="2" RateToPosition_1="1000" RateToPosition_2="0" RateToPosition_3="0" />
		<Stage ID="5" RateToSameType="1" RateToPosition_1="1000" RateToPosition_2="0" RateToPosition_3="0" />
		<Stage ID="6" RateToSameType="0" RateToPosition_1="0" RateToPosition_2="0" RateToPosition_3="0" />
	</TurnRate>
	<!-- End -->
	
	<!-- Tỷ lệ cược được nhân phần thưởng bao nhiêu lần -->
	<BetRate Bet_2="1" Bet_10="5" Bet_50="25" />
	<!-- End -->
</SeashellCircle>